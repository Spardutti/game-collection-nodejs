extends layout 

block content
    
    h1(class="form-title") #{title}

    form(method="POST" action="" class="genre-form")
        div
            input(type='text', placeholder='Company Name' name='name')
        div 
            input(type="text", onfocus="(this.type='date')", onblur="if(this.value==''){this.type='text'}" name="year", placeholder="Year of Foundation")
        div
            textarea(name="description", placeholder="Company Description" cols="30", rows="6")
        div(class="btn")
            button(type="submit") Submit
    if errors
        each error in errors
            li error.msg