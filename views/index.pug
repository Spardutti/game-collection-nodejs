extends layout

block content
  div(class="content-container")
    if user
      div(class="form-grid")
        a(href="/home/creategame") Add Game
        a(href="/home/companyform") Add Company
        a(href="/home/genreform") Add Genre
    div(class="content-info")
      h1= title
      div
        p This is the general information of the game library

      if error 
        p no data to display
      else
      div(class="content-list")
        ul 
          li Games: !{data.gameCount}
          li Companies: !{data.companyCount}
          li Genres: !{data.genreCount}
