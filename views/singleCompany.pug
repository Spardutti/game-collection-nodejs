extends layout

block content
    div(class="single-company-container")
        h1=title 
        h3 Foundated in #{year}
        div(class="text-container")
            p #{description}
        hr   
        if user
            div(class="edit-delete-btns")
                a(href=company.url+"/delete" class="delete-btn") Delete
                a(href=company.url+"/update" class="edit-btn") Edit